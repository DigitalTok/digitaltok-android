<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.device.DeviceSearchingFragment">

    <include
        android:id="@+id/searchingTopAppbar"
        layout="@layout/common_top_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchingTopAppbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 점 3개 -->
        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="210dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/dot1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_dot_gray" />

            <View
                android:id="@+id/dot2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/bg_dot_gray" />

            <View
                android:id="@+id/dot3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="19dp"
                android:background="@drawable/bg_dot_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/searchingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="연결 중.."
            android:textColor="@color/text_gray_1"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layoutDots"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/searchingSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="휴대폰을 디링에\n연결 중 입니다"
            android:textColor="@color/text_gray_2"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/searchingTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
