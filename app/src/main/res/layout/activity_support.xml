<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSupport"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/connectTopAppBar"
        layout="@layout/common_top_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 스크롤 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollSupport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/connectTopAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="39dp"
            android:paddingTop="24dp">

            <!-- 상단 배너 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bannerSupport"
                android:layout_width="0dp"
                android:layout_height="164dp"
                android:background="@drawable/bg_support_banner"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 헤드폰 아이콘 -->
                <ImageView
                    android:id="@+id/ivHeadphone"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/headphone"
                    android:contentDescription="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvBannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="무엇을 도와드릴까요?"
                    android:textColor="#FFFFFF"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:lineHeight="28sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ivHeadphone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvBannerDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친절한 고객 지원팀이 도와드리겠습니다"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBannerTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 옵션 카드 1: 이메일 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_faq_card"
                android:padding="21dp"
                app:layout_constraintTop_toBottomOf="@id/bannerSupport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:id="@+id/iconEmailWrap"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_icon_circle"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/email"
                        android:contentDescription="@null" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvEmailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#0A0A0A"
                    android:layout_marginTop="-9dp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconEmailWrap"
                    app:layout_constraintTop_toTopOf="@id/iconEmailWrap" />

                <TextView
                    android:id="@+id/tvEmailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="support@diring.com"
                    android:textColor="#155DFC"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/iconEmailWrap"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailTitle" />

                <TextView
                    android:id="@+id/tvArrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:lineHeight="24sp"
                    android:textColor="#99A1AF"
                    android:paddingEnd="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 옵션 카드 2: 카카오톡 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardKakao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_faq_card"
                android:padding="21dp"
                app:layout_constraintTop_toBottomOf="@id/cardEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:id="@+id/iconKakaoWrap"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_icon_circle"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/ivKakao"
                        android:layout_width="24dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chat"
                        android:contentDescription="@null" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvKakaoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카카오톡"
                    android:textColor="#0A0A0A"
                    android:layout_marginTop="-9dp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/iconKakaoWrap"
                    app:layout_constraintTop_toTopOf="@id/iconKakaoWrap" />

                <TextView
                    android:id="@+id/tvKakaoValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@DiRing"
                    android:textColor="#155DFC"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/iconKakaoWrap"
                    app:layout_constraintTop_toBottomOf="@id/tvKakaoTitle" />

                <TextView
                    android:id="@+id/tvArrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:lineHeight="24sp"
                    android:textColor="#99A1AF"
                    android:paddingEnd="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- (임시) 하단 네비 자리 -->
    <View
        android:id="@+id/bottomNavPlaceholder"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
