<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctaSupport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/bg_support_card"
    android:padding="18dp">

    <ImageView
        android:id="@+id/ivSupportIcon"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_chat"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSupportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="답변을 찾지 못하셨나요?"
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineHeight="20sp"
        android:gravity="center"
        android:textColor="#364153"
        app:layout_constraintTop_toBottomOf="@id/ivSupportIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnContactSupport"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_primary"
        android:text="고객 지원 문의하기"
        android:textSize="14sp"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvSupportTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
