<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFaq"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- (임시) 상단바 자리: 공용 상단바 받으면 교체 -->
    <View
        android:id="@+id/topBarPlaceholder"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- (임시) 제목: 상단바 컴포넌트 받으면 삭제/교체 -->
    <TextView
        android:id="@+id/tvTitleTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="자주 묻는 질문"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBarPlaceholder" />

    <!-- FAQ 리스트: CTA 위까지 -->

    <!-- CTA 카드 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/ctaSupport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTemp"/>

    <!-- (임시) 하단 네비 자리 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctaSupport"
        android:layout_width="337dp"
        android:layout_height="158dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_support_card"
        app:layout_constraintBottom_toTopOf="@id/bottomNavPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 글꼴 수정 필요 -->
        <ImageView
            android:id="@+id/ivSupportIcon"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="104dp"
            android:src="@drawable/ic_chat"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/ctaSupport"
            app:layout_constraintEnd_toEndOf="@id/ctaSupport"
            app:layout_constraintStart_toStartOf="@id/ctaSupport"
            app:layout_constraintTop_toTopOf="@id/ctaSupport" />


        <!-- 글꼴 수정 필요 -->
        <TextView
            android:id="@+id/tvSupportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="답변을 찾지 못하셨나요?"
            android:textSize="14sp"
            android:textStyle="normal"
            android:lineHeight="20sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#364153"
            app:layout_constraintTop_toBottomOf="@id/ivSupportIcon"
            app:layout_constraintStart_toStartOf="@id/ctaSupport"
            app:layout_constraintEnd_toEndOf="@id/ctaSupport" />


        <!-- 글꼴 수정 필요 -->
        <Button
            android:id="@+id/btnContactSupport"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_primary"
            android:text="고객 지원 문의하기"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvSupportTitle"
            app:layout_constraintStart_toStartOf="@id/ctaSupport"
            app:layout_constraintEnd_toEndOf="@id/ctaSupport" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottomNavPlaceholder"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
