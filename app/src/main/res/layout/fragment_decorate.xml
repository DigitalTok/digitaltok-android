<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="꾸미기"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 탭 -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_weight="1"
            android:text="최근 사용한 사진"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/tab_toggle_text"
            app:backgroundTint="@color/tab_toggle_bg"
            app:cornerRadius="4dp"
            app:strokeColor="@color/tab_toggle_stroke"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTemplate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_weight="1"
            android:text="템플릿"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/tab_toggle_text"
            app:backgroundTint="@color/tab_toggle_bg"
            app:cornerRadius="4dp"
            app:strokeColor="@color/tab_toggle_stroke"
            app:strokeWidth="2dp"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- 카운트 -->
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31dp"
        android:text="최근 사용한 사진 (15/15)"
        android:textColor="@color/text_gray_2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/toggleTabs"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 하단 전송 버튼 컨테이너 -->
    <FrameLayout
        android:id="@+id/sendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:translationZ="10dp"
        android:elevation="8dp"
        android:paddingStart="19dp"
        android:paddingEnd="17dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="이미지 전송하기"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="4dp"
            app:backgroundTint="@color/Main_100"
            android:textColor="@color/white"/>
    </FrameLayout>

    <!-- 그리드 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="110dp"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 역명 템플릿: 세로 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTemplateList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
