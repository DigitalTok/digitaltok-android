<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top App Bar -->
    <include
        android:id="@+id/connectTopAppBar"
        layout="@layout/common_top_app_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 탭 -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/connectTopAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_weight="1"
            android:text="최근 사용한 사진"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/tab_toggle_text"
            app:backgroundTint="@color/tab_toggle_bg"
            app:cornerRadius="4dp"
            app:strokeColor="@color/tab_toggle_stroke"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTemplate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_weight="1"
            android:text="템플릿"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/tab_toggle_text"
            app:backgroundTint="@color/tab_toggle_bg"
            app:cornerRadius="4dp"
            app:strokeColor="@color/tab_toggle_stroke"
            app:strokeWidth="2dp"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- 탭 아래 안내 문구 (템플릿 탭에서만 노출) -->
    <TextView
        android:id="@+id/tvTabHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:text="역명과 노선 색상이 포함된 템플릿"
        android:textColor="@color/text_gray_3"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toggleTabs"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 카운트 -->
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31dp"
        android:text="최근 사용한 사진 (15/15)"
        android:textColor="@color/text_gray_2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/toggleTabs"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 검색창 (지하철역 리스트에서만 보임) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:theme="@style/ThemeOverlay.DigitalTok.CursorBlack"
        app:boxBackgroundMode="filled"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_glass"
        app:layout_constraintTop_toBottomOf="@id/toggleTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textCursorDrawable="@drawable/cursor_black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 지하철역 리스트 설명 (지하철역 리스트에서만 보임) -->
    <TextView
        android:id="@+id/tvStationHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:visibility="gone"
        android:text="역명과 노선 색상이 포함된 템플릿"
        android:textColor="@color/text_gray_3"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tilSearch"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 하단 전송 버튼 컨테이너 -->
    <FrameLayout
        android:id="@+id/sendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:translationZ="10dp"
        android:elevation="8dp"
        android:paddingStart="19dp"
        android:paddingEnd="17dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="이미지 전송하기"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="4dp"
            app:backgroundTint="@color/Main_100"
            android:textColor="@color/white"/>
    </FrameLayout>

    <!-- 그리드 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="110dp"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 역명 템플릿: 세로 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTemplateList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 지하철역 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:paddingBottom="110dp"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvStationHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- 교통약자 좌석 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransportSeats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:paddingBottom="110dp"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTabHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
