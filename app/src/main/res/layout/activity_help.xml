<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/connectTopAppBar"
        layout="@layout/common_top_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 섹션 타이틀 -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="23dp"
        android:text="도움말·고객지원"
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineHeight="20sp"
        android:textColor="#4A5565"
        app:layout_constraintTop_toBottomOf="@id/connectTopAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 메뉴 카드(2줄) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_help_menu_card"
        app:layout_constraintTop_toBottomOf="@id/tvSectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 : 자주 묻는 질문 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowFaq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivFaqIcon"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:src="@drawable/question"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvFaq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="자주 묻는 질문"
                android:textSize="14sp"
                android:textColor="#0A0A0A"
                android:textStyle="normal"
                android:lineHeight="20sp"
                app:layout_constraintStart_toEndOf="@id/ivFaqIcon"
                app:layout_constraintTop_toTopOf="@id/ivFaqIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivFaqIcon"
                app:layout_constraintEnd_toStartOf="@id/tvFaqArrow" />

            <TextView
                android:id="@+id/tvFaqArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="16sp"
                android:textColor="#99A1AF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivFaqIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivFaqIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/rowFaq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Row 2 : 고객 지원 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivSupportIcon"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_chat"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="고객 지원"
                android:textSize="14sp"
                android:textColor="#0A0A0A"
                android:textStyle="normal"
                android:lineHeight="20sp"
                app:layout_constraintStart_toEndOf="@id/ivSupportIcon"
                app:layout_constraintTop_toTopOf="@id/ivSupportIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivSupportIcon"
                app:layout_constraintEnd_toStartOf="@id/tvSupportArrow" />

            <TextView
                android:id="@+id/tvSupportArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="16sp"
                android:textColor="#99A1AF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivSupportIcon"
                app:layout_constraintBottom_toBottomOf="@id/ivSupportIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 버전 박스 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_version_box"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 위쪽 빈 여백 -->
        <View
            android:id="@+id/viewVersionTopSpace"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버전 1.0.0"
            android:textSize="12sp"
            android:lineHeight="16sp"
            android:textStyle="normal"
            android:layout_marginTop="4dp"
            android:textColor="#6A7282"
            app:layout_constraintTop_toBottomOf="@id/viewVersionTopSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="© 2026 DiRing. All rights reserved."
            android:textSize="12sp"
            android:textColor="#99A1AF"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/boxVersion"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- (임시) 하단 네비 자리 -->
    <View
        android:id="@+id/bottomNavPlaceholder"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
