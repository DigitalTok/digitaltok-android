<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="21dp"
    android:paddingEnd="21dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_logout_dialog">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/text_black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="정말 로그아웃 하시겠습니까?"
        android:textSize="14sp"
        android:textColor="@color/text_gray_1"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/btnRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_logout_red"
            android:gravity="center"
            android:text="로그아웃"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_logout_gray"
            android:gravity="center"
            android:text="돌아가기"
            android:textColor="@color/text_gray_1"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
