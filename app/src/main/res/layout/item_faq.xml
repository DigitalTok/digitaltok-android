<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/bg_faq_card"
    android:paddingStart="21dp"
    android:paddingEnd="21dp"
    android:paddingTop="21dp"
    android:paddingBottom="21dp"
    android:layout_marginBottom="21dp">

    <!-- Q 라벨 -->
    <TextView
        android:id="@+id/tvQLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q"
        android:lineHeight="24sp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#155DFC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 질문 -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="DigitalTok은 어떻게 사용하나요?"
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineHeight="20sp"
        android:textColor="#0A0A0A"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/tvQLabel"
        app:layout_constraintStart_toEndOf="@id/tvQLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- A 라벨 -->
    <TextView
        android:id="@+id/tvALabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:lineHeight="24sp"
        android:layout_marginTop="12dp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#99A1AF"
        app:layout_constraintTop_toBottomOf="@id/tvQLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 답변 -->
    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="앱에서 이미지나 템플릿을 선택한 후 NFC로 DigitalTok에 전송하면 자동으로 표시됩니다."
        android:textSize="14sp"
        android:textStyle="normal"
        android:lineHeight="23sp"
        android:textColor="#4A5565"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toEndOf="@id/tvALabel"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
