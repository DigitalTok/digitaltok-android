<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 임시 컨텐츠 -->
    <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"/>

    <!-- 임의 네비게이션 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 왼쪽 버튼(더미) -->
        <Button
            android:id="@+id/btnNavLeft"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="L"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnNavMiddle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

        <!-- 가운데 버튼(더미) -->
        <Button
            android:id="@+id/btnNavMiddle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="M"
            app:layout_constraintStart_toEndOf="@id/btnNavLeft"
            app:layout_constraintEnd_toStartOf="@id/btnNavHelp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

        <!-- 맨 오른쪽 버튼(Help 이동) -->
        <Button
            android:id="@+id/btnNavHelp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="HELP"
            app:layout_constraintStart_toEndOf="@id/btnNavMiddle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
