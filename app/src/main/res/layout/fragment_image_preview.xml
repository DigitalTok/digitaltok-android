<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.upload.ImagePreviewFragment">

    <!-- 1. Top App Bar -->
    <include
        android:id="@+id/app_bar"
        layout="@layout/common_top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 2. Image Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/preview_card"
            android:layout_width="288dp"
            android:layout_height="288dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="27dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/rectangle_95" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 3. Diring Preview Text -->
        <TextView
            android:id="@+id/tv_diring_preview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="디링 미리보기"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/text_gray_2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/preview_card"
            app:layout_constraintStart_toStartOf="@+id/preview_card"
            app:layout_constraintTop_toBottomOf="@+id/preview_card" />

        <!-- 4. Info Text Box -->
        <TextView
            android:id="@+id/tv_info_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_info_box_preview"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="디링을 핸드폰 뒷면에 밀착시켜 주세요.\n푸른 계열은 DigitalTok에 구현이 불가합니다."
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/Main_100"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_send_to_diring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 5. Send Button -->
        <TextView
            android:id="@+id/btn_send_to_diring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_main_card"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="디링에 전송하기"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>