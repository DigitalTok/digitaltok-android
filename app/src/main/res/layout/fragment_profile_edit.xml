<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProfileEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <!-- Top App Bar -->
    <include
        android:id="@+id/connectTopAppBar"
        layout="@layout/common_top_app_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/connectTopAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- =======================
                 섹션 1) 프로필/이름
                 ======================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sectionProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_profile_card"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 프로필 이미지 -->
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:src="@drawable/none_profile"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 이름 라벨 -->
                <TextView
                    android:id="@+id/tvNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="19dp"
                    android:text="이름"
                    android:textColor="#767676"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/ivProfile"
                    app:layout_constraintTop_toTopOf="@id/ivProfile" />

                <!-- 이름 값 - 스타일 수정 필요-->
                <TextView
                    android:id="@+id/tvNameValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginBottom="19dp"
                    android:text="정재원"
                    android:textColor="#111111"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivProfile"
                    app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 파란 안내 박스 -->
                <TextView
                    android:id="@+id/tvInfoBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_profile_info_box"
                    android:paddingStart="58dp"
                    android:paddingEnd="58dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="3sp"
                    android:minLines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="이름은 자동생성되며, 이메일은 로그인 및 알림 수신에 사용됩니다."
                    android:textColor="#36ABFF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 섹션 2) 이메일 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sectionEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_profile_card"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="28dp"
                android:paddingBottom="28dp"
                app:layout_constraintTop_toBottomOf="@id/sectionProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 이메일 라벨 -->
                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#A0A0A0"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 인증됨 표시 -->
                <ImageView
                    android:id="@+id/ivVerified"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check_circle"
                    android:contentDescription="@null"
                    app:layout_constraintEnd_toStartOf="@id/tvVerified"
                    app:layout_constraintTop_toTopOf="@id/tvEmailLabel"
                    app:layout_constraintBottom_toBottomOf="@id/tvEmailLabel"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증됨"
                    android:textColor="#00C950"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvEmailLabel"
                    app:layout_constraintBottom_toBottomOf="@id/tvEmailLabel" />

                <!-- 이메일 박스 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/boxEmail"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/bg_email_input_box"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvEmailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jaewon12@gmail.com"
                        android:textColor="#767676"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/ivEditEmail"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/edit_image"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 섹션 3) 계정관리 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sectionAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_profile_card"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="28dp"
                android:paddingBottom="28dp"
                app:layout_constraintTop_toBottomOf="@id/sectionEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvAccountTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="계정관리"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 로그아웃 row -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rowLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAccountTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textColor="#FF6666"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivLogoutArrow" />

                    <ImageView
                        android:id="@+id/ivLogoutArrow"
                        android:layout_width="7dp"
                        android:layout_height="14dp"
                        android:src="@drawable/vector_1"
                        app:tint="#FF6666"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <!-- 회원탈퇴 row -->
                    <TextView
                        android:id="@+id/tvWithdraw"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="회원 탈퇴"
                        android:textColor="#505050"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="@id/rowLogout"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogout"
                        app:layout_constraintEnd_toStartOf="@id/ivWithdrawArrow" />

                    <ImageView
                        android:id="@+id/ivWithdrawArrow"
                        android:layout_width="7dp"
                        android:layout_height="14dp"
                        android:src="@drawable/vector_1"
                        app:tint="#505050"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
