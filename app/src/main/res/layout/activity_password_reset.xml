<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingTop="24dp">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/btnBackIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일로 로그인"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="16sp"
        android:textColor="@color/black_top"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnBackIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvResetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="비밀번호 찾기"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvResetDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="가입하신 이메일 주소를 입력하시면 비밀번호\n재설정 링크를 보내드립니다"
        android:textSize="13sp"
        android:textColor="@color/text_gray_2"
        android:gravity="center"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvResetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email Input -->
    <EditText
        android:id="@+id/etResetEmail"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="example@mail.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/text_gray_3"
        android:textColorHint="#B0B0B0"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvResetDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info Box -->
    <LinearLayout
        android:id="@+id/boxInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="@drawable/bg_terms_box"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etResetEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_info"
                android:contentDescription="info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="참고사항"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="14sp"
                android:textColor="@color/text_gray_1"
                android:includeFontPadding="false"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvInfoBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="• 이메일 도착까지 최대 5분이 소요됩니다\n• 스팸함을 확인해주세요\n• 링크는 24시간 동안 유효합니다"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text_gray_2"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <!-- Send Link -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendLink"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:text="재설정 링크 보내기"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:enabled="false"
        android:background="@drawable/bg_btn_gray"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/boxInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:text="돌아가기"
        android:textColor="@color/text_gray_2"
        android:textSize="14sp"
        android:background="@drawable/bg_btn_light"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnSendLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Status -->
    <TextView
        android:id="@+id/tvResetStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/Success"
        android:gravity="center"
        android:visibility="gone"
        android:text="재설정 링크를 전송했어요. 이메일을 확인해 주세요!"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
